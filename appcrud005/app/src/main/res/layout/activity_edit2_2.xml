<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lable_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Nombre"
            android:textSize="14dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Nombreem"
            android:singleLine="true"
            android:layout_width="396dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Actividad"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Actividad"
            android:layout_width="378dp"
            android:singleLine="true"
            android:layout_height="wrap_content" />

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/label_mname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Fecha inicio"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Fechainicio"
            android:layout_width="396dp"
            android:singleLine="true"
            android:layout_height="wrap_content" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Fecha Final"

            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Fechafinal"
            android:layout_width="406dp"
            android:singleLine="true"
            android:layout_height="wrap_content" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/label_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="10dp"
            android:text="Celular"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Celu"
            android:layout_width="364dp"
            android:singleLine="true"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_monto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Cantidad"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Cantidad"
            android:layout_width="405dp"
            android:singleLine="true"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/label_fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="10dp"
            android:text="Pago"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Pago"
            android:layout_width="426dp"
            android:singleLine="true"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:padding="5dp"
        android:text="Save Changes" />

</LinearLayout>